---
import '../styles/global.css';
import DarkVeil from '../components/backgrounds/DarkVeil.tsx';
import PageLoader from '../components/ui/PageLoader.astro';
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>useEffect - –ö–æ–≥–¥–∞ –Ω—É–∂–µ–Ω, –∞ –∫–æ–≥–¥–∞ –Ω–µ—Ç</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- ‚ö° DNS prefetch for external resources -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
    
    <!-- ‚ö° Preconnect to external resources for faster loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- ‚ö° Use font-display: swap for immediate text rendering -->
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600&family=Montserrat:wght@300;400;500;600;700;900&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600&family=Montserrat:wght@300;400;500;600;700;900&display=swap"
        rel="stylesheet"
      />
    </noscript>
  </head>
  <body
    class="text-white overflow-x-hidden dark relative"
    x-data="{ currentSlide: 0, totalSlides: 0, syncUrlWithSlide: false }"
    x-init="
      totalSlides = document.querySelectorAll('.slide').length;
      // Initialize from URL hash if present
      const hash = window.location.hash.substring(1);
      if (hash) {
        const slideElement = document.getElementById(hash);
        if (slideElement) {
          const slides = Array.from(document.querySelectorAll('.slide'));
          const index = slides.indexOf(slideElement);
          if (index !== -1) {
            currentSlide = index;
          }
        }
      }
    "
  >
    <!-- Page Loader -->
    <PageLoader />

    <!-- DarkVeil background - ‚ö° Lazy load after idle for better initial performance -->
    <div
      class="fixed inset-0 z-0"
      id="dark-veil-container"
      data-current-slide="0"
      data-total-slides="0"
    >
      <DarkVeil
        client:idle
        noiseIntensity={0.05}
        scanlineIntensity={0.02}
        speed={0.3}
        scanlineFrequency={0.5}
        warpAmount={5}
      />
    </div>

    <!-- Content -->
    <div class="relative z-10">
      <slot />
    </div>

    <script>
      import '../scripts/main.js';
    </script>

    <script>
      // Sync Alpine.js state with DarkVeil container
      const setupAlpineSync = () => {
        console.log('üèîÔ∏è Setting up Alpine sync');
        const container = document.getElementById('dark-veil-container');
        if (!container) {
          console.error('‚ùå DarkVeil container not found');
          return;
        }

        console.log('‚úÖ DarkVeil container found');

        // Check if Alpine is available
        if (typeof window.Alpine === 'undefined') {
          console.error('‚ùå Alpine.js not found on window');
          return;
        }

        console.log('‚úÖ Alpine.js found, setting up Alpine.effect');

        // Watch for currentSlide and totalSlides changes
        window.Alpine.effect(() => {
          const data = window.Alpine.$data(document.body);
          if (data) {
            const currentSlide = data.currentSlide || 0;
            const totalSlides = data.totalSlides || 0;

            console.log('üîÑ Alpine.effect triggered:', {
              currentSlide,
              totalSlides,
            });

            container.dataset.currentSlide = String(currentSlide);
            container.dataset.totalSlides = String(totalSlides);

            console.log('üìù Updated container attributes:', {
              'data-current-slide': container.dataset.currentSlide,
              'data-total-slides': container.dataset.totalSlides,
            });
          }
        });
      };

      // Try on alpine:init event
      document.addEventListener('alpine:init', setupAlpineSync);

      // Also try on DOMContentLoaded as fallback
      document.addEventListener('DOMContentLoaded', () => {
        setTimeout(setupAlpineSync, 100);
      });
    </script>
  </body>
</html>
