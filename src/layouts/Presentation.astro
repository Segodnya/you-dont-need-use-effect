---
import '../styles/global.css';
import DarkVeil from '../components/backgrounds/DarkVeil.tsx';
import PageLoader from '../components/ui/PageLoader.astro';
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>useEffect - Когда нужен, а когда нет</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600&family=Montserrat:wght@300;400;500;600;700;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="text-white overflow-x-hidden dark relative"
    x-data="{ currentSlide: 0, totalSlides: 0, syncUrlWithSlide: false }"
    x-init="
      totalSlides = document.querySelectorAll('.slide').length;
      // Initialize from URL hash if present
      const hash = window.location.hash.substring(1);
      if (hash) {
        const slideElement = document.getElementById(hash);
        if (slideElement) {
          const slides = Array.from(document.querySelectorAll('.slide'));
          const index = slides.indexOf(slideElement);
          if (index !== -1) {
            currentSlide = index;
          }
        }
      }
    "
  >
    <!-- Page Loader -->
    <PageLoader />
    
    <!-- DarkVeil background -->
    <div class="fixed inset-0 z-0">
      <DarkVeil 
        client:load
        hueShift={0}
        noiseIntensity={0.05}
        scanlineIntensity={0.02}
        speed={0.3}
        scanlineFrequency={0.5}
        warpAmount={5}
        x-bind:current-slide="currentSlide"
        x-bind:total-slides="totalSlides"
      />
    </div>
    
    <!-- Content -->
    <div class="relative z-10">
      <slot />
    </div>

    <script>
      import '../scripts/main.js';
    </script>
  </body>
</html>
