---
import '../styles/global.css';
import DarkVeil from '../components/backgrounds/DarkVeil.tsx';
import PageLoader from '../components/ui/PageLoader.astro';
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>useEffect - Когда нужен, а когда нет</title>
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.BASE_URL}/favicon.svg`}
    />

    <!-- ⚡ DNS prefetch for external resources -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />

    <!-- ⚡ Preconnect to external resources for faster loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- ⚡ Use font-display: swap for immediate text rendering -->
    <!-- ⚡ Optimized: Only load used font weights (400, 600, 900 for Montserrat; 400, 700 for JetBrains Mono) -->
    <!-- ⚡ Subset optimization: Only load Cyrillic (Russian) + Latin (English) characters -->
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Montserrat:wght@400;600;900&display=swap&subset=cyrillic,latin"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Montserrat:wght@400;600;900&display=swap&subset=cyrillic,latin"
        rel="stylesheet"
      />
    </noscript>

    <!-- ⚡ Preload critical images -->
    <!-- kommo.png: Used in Navigation (visible on all slides) -->
    <link
      rel="preload"
      as="image"
      href={`${import.meta.env.BASE_URL}/kommo.png`}
    />
    <!-- Note: Tech stack icons (astro, shadcn, alpine, ogl) are lazy-loaded as they're on slide 20 -->
    <!-- Note: author.jpeg is lazy-loaded as it's on slide 21 -->
  </head>
  <body
    class="text-white overflow-x-hidden dark relative"
    x-data="{ currentSlide: 0, totalSlides: 0, syncUrlWithSlide: false, highContrast: false }"
    x-bind:class="highContrast ? 'high-contrast' : ''"
    x-init="
      totalSlides = document.querySelectorAll('.slide').length;
      // Initialize from URL hash if present
      const hash = window.location.hash.substring(1);
      if (hash) {
        const slideElement = document.getElementById(hash);
        if (slideElement) {
          const slides = Array.from(document.querySelectorAll('.slide'));
          const index = slides.indexOf(slideElement);
          if (index !== -1) {
            currentSlide = index;
          }
        }
      }
    "
  >
    <!-- Page Loader -->
    <PageLoader />

    <!-- DarkVeil background - ⚡ Lazy load after idle for better initial performance -->
    <div
      class="fixed inset-0 z-0"
      id="dark-veil-container"
      data-current-slide="0"
      data-total-slides="0"
    >
      <DarkVeil
        client:idle
        noiseIntensity={0.05}
        scanlineIntensity={0.02}
        speed={0.3}
        scanlineFrequency={0.5}
        warpAmount={5}
      />
    </div>

    <!-- Content -->
    <div class="relative z-10">
      <slot />
    </div>

    <script>
      import '../scripts/main.js';
      import { initAlpineSync } from '../scripts/alpine-sync.ts';

      // Initialize Alpine-DarkVeil synchronization
      initAlpineSync();
    </script>
  </body>
</html>
