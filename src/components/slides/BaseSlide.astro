---
import PageTitle from '../ui/PageTitle.astro';

export interface Props {
  id: string;
  title?: string;
  variant?: 'default' | 'centered' | 'code' | 'full';
  className?: string;
}

const { id, title, variant = 'default', className = '' } = Astro.props;
---

<section
  id={id}
  class={`slide min-h-screen w-full lg:snap-start flex flex-col justify-center px-6 lg:px-32 py-16 lg:transition-all lg:duration-700 lg:opacity-40 transform-gpu ${className}`}
  data-slide={id}
>
  {title && <PageTitle>{title}</PageTitle>}
  <div
    class={`
    ${variant === 'centered' ? 'text-center mx-auto max-w-4xl' : ''}
    ${variant === 'full' ? 'w-full' : 'max-w-6xl'}
    lg:content-animation
  `}
  >
    <slot />
  </div>
</section>
