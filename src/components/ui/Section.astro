---
export interface Props {
  spacing?: 'tight' | 'normal' | 'relaxed';
  class?: string;
}

const { spacing = 'normal', class: className = '' } = Astro.props;

const spacingClasses = {
  tight: 'space-y-4',
  normal: 'space-y-6',
  relaxed: 'space-y-8',
};
---

<div class={`${spacingClasses[spacing]} ${className}`}>
  <slot />
</div>
