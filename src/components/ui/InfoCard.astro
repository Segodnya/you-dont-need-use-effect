---
/**
 * InfoCard - Card component with title and icon support
 * 
 * Used for informational content with optional titles and icons.
 * Supports status-based variants (success, error, info, warning).
 */

import GlassCard from './GlassCard.astro';
import type { StatusVariant } from '../../lib/constants';
import { getStatusTheme } from '../../lib/constants';

export interface Props {
  variant?: StatusVariant;
  icon?: string;
  title?: string;
  titleSize?: 'sm' | 'base' | 'lg';
  class?: string;
}

const { 
  variant = 'info', 
  icon, 
  title,
  titleSize = 'lg',
  class: className = '' 
} = Astro.props;

const theme = getStatusTheme(variant);

const titleSizes = {
  sm: 'text-base',
  base: 'text-lg',
  lg: 'text-xl',
};
---

<GlassCard color={theme.gradient.split('-')[1].split('/')[0] as any} class={className}>
  <div class="rounded-xl">
    {title && (
      <h3 class={`${theme.title} font-semibold ${titleSizes[titleSize]} mb-4 flex items-center gap-2`}>
        {icon && <span class="text-xl">{icon}</span>}
        {title}
      </h3>
    )}
    <slot />
  </div>
</GlassCard>
