---
export interface Props {
  variant?: 'success' | 'error' | 'info' | 'warning';
  icon?: string;
  title?: string;
  titleSize?: 'sm' | 'base' | 'lg';
  class?: string;
}

const { 
  variant = 'info', 
  icon, 
  title,
  titleSize = 'lg',
  class: className = '' 
} = Astro.props;

const variants = {
  success: {
    container: 'bg-green-950/20 border border-green-500/30',
    title: 'text-green-400',
  },
  error: {
    container: 'bg-red-950/20 border border-red-500/30',
    title: 'text-red-400',
  },
  info: {
    container: 'bg-blue-950/20 border border-blue-500/30',
    title: 'text-blue-400',
  },
  warning: {
    container: 'bg-yellow-950/20 border border-yellow-500/30',
    title: 'text-yellow-400',
  },
};

const titleSizes = {
  sm: 'text-base',
  base: 'text-lg',
  lg: 'text-xl',
};

const config = variants[variant];
---

<div class={`${config.container} rounded-lg p-6 ${className}`}>
  {title && (
    <h3 class={`${config.title} font-semibold ${titleSizes[titleSize]} mb-4 flex items-center gap-2`}>
      {icon && <span class="text-xl">{icon}</span>}
      {title}
    </h3>
  )}
  <slot />
</div>
