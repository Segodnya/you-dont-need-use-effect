---
export interface Props {
  href: string;
  showIcon?: boolean;
  class?: string;
}

const { href, showIcon = true, class: className = '' } = Astro.props;
---

<div class={`relative rounded-xl p-6 ${className}`}>
  {/* Blurry background */}
  <div class="absolute inset-0 bg-linear-to-br from-blue-500/20 via-purple-500/20 to-cyan-500/20 rounded-xl blur-sm transform scale-110"></div>
  
  {/* Card content */}
  <div class="relative border-2 border-blue-400/40 bg-blue-950/40 backdrop-blur-sm shadow-lg shadow-blue-500/10 rounded-xl hover:border-blue-500/50 transition-colors">
    <a
      href={href}
      target="_blank"
      rel="noopener noreferrer"
      class="text-blue-400 hover:text-blue-300 font-semibold text-lg flex items-center gap-2"
    >
      <slot />
      {showIcon && <span class="text-sm">â†—</span>}
    </a>
  </div>
</div>
