---
/**
 * LinkCard - Card component for external links
 * 
 * Features:
 * - Opens links in new tab
 * - Optional external link icon
 * - Hover effects for borders
 */

import GlassCard from './GlassCard.astro';
import { BORDER_COLORS, BACKGROUND_COLORS } from '../../lib/constants';

export interface Props {
  href: string;
  showIcon?: boolean;
  class?: string;
}

const { href, showIcon = true, class: className = '' } = Astro.props;
---

<GlassCard color="blue" class={className}>
  <div class={`border-2 ${BORDER_COLORS.blue} ${BACKGROUND_COLORS.blue} rounded-xl hover:border-blue-500/50 transition-colors`}>
    <a
      href={href}
      target="_blank"
      rel="noopener noreferrer"
      class="text-blue-400 hover:text-blue-300 font-semibold text-lg flex items-center gap-2"
    >
      <slot />
      {showIcon && <span class="text-sm">â†—</span>}
    </a>
  </div>
</GlassCard>
