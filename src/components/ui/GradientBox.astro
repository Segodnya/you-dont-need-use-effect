---
export interface Props {
  from?: string;
  to?: string;
  border?: string;
  class?: string;
}

const { 
  from = 'blue-600/20', 
  to = 'purple-600/20',
  border = 'blue-500/30',
  class: className = '' 
} = Astro.props;
---

<div
  class={`bg-linear-to-r from-${from} to-${to} border border-${border} rounded-xl p-8 ${className}`}
>
  <slot />
</div>
