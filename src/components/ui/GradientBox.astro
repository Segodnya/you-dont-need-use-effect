---
export interface Props {
  from?: string;
  to?: string;
  border?: string;
  class?: string;
}

const { 
  from = 'blue-500/20', 
  to = 'purple-500/20',
  border = 'blue-400/40',
  class: className = '' 
} = Astro.props;

// Create gradient and border color combinations
const gradientClasses = `from-${from} via-${from.replace('blue', 'purple')} to-${to}`;
---

<div class={`relative rounded-xl p-8 ${className}`}>
  {/* Blurry background */}
  <div class={`absolute inset-0 bg-linear-to-br ${gradientClasses} rounded-xl blur-sm transform scale-110`}></div>
  
  {/* Card content */}
  <div class={`relative backdrop-blur-sm rounded-xl`}>
    <slot />
  </div>
</div>
