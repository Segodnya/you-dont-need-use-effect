---
/**
 * Card - General purpose card component with glassmorphic effect
 * 
 * Features:
 * - Multiple color variants
 * - Optional hover effects
 * - Backdrop blur for depth
 */

import GlassCard from './GlassCard.astro';
import type { ColorVariant } from '../../lib/constants';

export interface Props {
  variant?: 'default' | 'hover' | 'gradient-border';
  color?: ColorVariant;
  class?: string;
}

const { variant = 'default', color = 'gray', class: className = '' } = Astro.props;

const variantClasses = {
  default: '',
  hover: 'hover:border-opacity-60 transition-all duration-300',
  'gradient-border': '',
};
---

<GlassCard color={color} class={className}>
  <div class={`${variantClasses[variant]} rounded-xl`}>
    <slot />
  </div>
</GlassCard>
