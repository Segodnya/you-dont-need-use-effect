---
export interface Props {
  variant?: 'default' | 'hover' | 'gradient-border';
  color?: 'gray' | 'blue' | 'green' | 'red' | 'cyan' | 'purple' | 'pink' | 'yellow';
  class?: string;
}

const { variant = 'default', color = 'gray', class: className = '' } = Astro.props;

const baseClasses = 'rounded-lg p-5';

const colorClasses = {
  gray: 'bg-gray-800/50 border border-gray-700',
  blue: 'bg-blue-950/20 border-l-4 border-blue-500',
  green: 'bg-green-900/20 border border-green-700',
  red: 'bg-red-900/20 border border-red-700',
  cyan: 'bg-blue-950/20 border-l-4 border-cyan-500',
  purple: 'bg-blue-950/20 border-l-4 border-purple-500',
  pink: 'bg-blue-950/20 border-l-4 border-pink-500',
  yellow: 'bg-blue-950/20 border-l-4 border-green-500',
};

const variantClasses = {
  default: '',
  hover: 'hover:border-gray-600 transition-colors',
  'gradient-border': '',
};

const classes = `${baseClasses} ${colorClasses[color]} ${variantClasses[variant]} ${className}`;
---

<div class={classes}>
  <slot />
</div>
