---
/**
 * Callout - Attention-grabbing box for important information
 * 
 * Features:
 * - Status-based variants (info, warning, error, success, tip, primary)
 * - Default icons for each variant
 * - Custom icon override support
 * - Flex layout with icon and content
 */

import GlassCard from './GlassCard.astro';
import type { StatusVariant } from '../../lib/constants';
import { getStatusTheme } from '../../lib/constants';

export interface Props {
  variant?: StatusVariant;
  icon?: string;
  class?: string;
}

const { variant = 'info', icon, class: className = '' } = Astro.props;

const theme = getStatusTheme(variant);
const displayIcon = icon || theme.icon;
---

<GlassCard color={theme.gradient.split('-')[1].split('/')[0] as any} class={className} padding="p-4">
  <div class="rounded-xl">
    <div class={`${theme.text} flex items-center gap-3`}>
      <span class="text-2xl shrink-0">{displayIcon}</span>
      <div class="flex-1"><slot /></div>
    </div>
  </div>
</GlassCard>
