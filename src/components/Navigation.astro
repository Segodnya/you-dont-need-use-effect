---
export interface Props {
  slides: Array<{ id: string; title: string }>;
}

const { slides } = Astro.props;
---

<!-- Right Side Navigation Container -->
<div
  class="fixed right-8 top-1/2 transform -translate-y-1/2 hidden lg:flex flex-col items-center gap-6 z-50 max-h-[90vh]"
>
  <!-- Kommo Logo -->
  <div class="flex-shrink-0">
    <img
      src="/kommo.png"
      alt="Kommo"
      class="w-12 h-12 rounded-full object-cover shadow-lg ring-2 ring-gray-700/50"
    />
  </div>

  <!-- Navigation Dots with Scroll -->
  <nav
    id="nav-dots-container"
    class="flex flex-col space-y-2 overflow-y-auto py-2 px-1"
    aria-label="Навигация по слайдам"
    style="scrollbar-width: none; max-height: calc(9 * 2.5rem); scroll-behavior: smooth;"
  >
    {
      slides.map((slide, index) => (
        <div class="relative flex-shrink-0" data-dot-wrapper={index}>
          <a
            href={`#${slide.id}`}
            data-slide-index={index}
            class="nav-dot flex items-center justify-center w-8 h-8 rounded-full transition-colors duration-300 focus:outline-none text-xs font-semibold text-white relative z-10"
            title={slide.title}
            aria-label={`Перейти к слайду: ${slide.title}`}
            x-bind:class={`currentSlide === ${index} ? 'bg-cyan-500' : 'bg-gray-600 hover:bg-cyan-400'`}
          >
            {index + 1}
          </a>
          <div
            class="absolute inset-0 rounded-full bg-cyan-500/20 transition-all duration-300 pointer-events-none"
            x-bind:class={`currentSlide === ${index} ? 'opacity-100 scale-[1.4]' : 'opacity-0 scale-100'`}
          />
        </div>
      ))
    }
  </nav>

  <!-- Script to handle auto-scroll -->
  <script>
    document.addEventListener('alpine:initialized', () => {
      const container = document.getElementById('nav-dots-container');
      if (!container) return;

      // Watch for Alpine state changes
      (window as any).Alpine.effect(() => {
        const data = (window as any).Alpine.$data(document.body);
        if (!data) return;

        const currentSlide = data.currentSlide || 0;

        // Use requestAnimationFrame to ensure DOM is ready
        requestAnimationFrame(() => {
          const dotWrapper = container.querySelector(
            `[data-dot-wrapper="${currentSlide}"]`
          ) as HTMLElement;

          if (dotWrapper) {
            const containerHeight = container.clientHeight;
            const dotTop = dotWrapper.offsetTop;
            const dotHeight = dotWrapper.offsetHeight;

            // Calculate scroll position to center the active dot
            const centerPosition = dotTop - containerHeight / 2 + dotHeight / 2;

            container.scrollTo({
              top: centerPosition,
              behavior: 'smooth',
            });
          }
        });
      });
    });
  </script>

  <!-- Navigation Buttons -->
  <div class="flex flex-col items-center gap-3">
    <!-- Previous Button -->
    <button
      id="prev-slide-btn"
      class="nav-button bg-gray-800/80 backdrop-blur-sm hover:bg-cyan-600/90 text-white p-3 rounded-full shadow-lg transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-cyan-400 disabled:opacity-30 disabled:cursor-not-allowed disabled:hover:scale-100"
      aria-label="Предыдущий слайд"
      title="Предыдущий слайд"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M5 15l7-7 7 7"></path>
      </svg>
    </button>

    <!-- Next Button -->
    <button
      id="next-slide-btn"
      class="nav-button bg-gray-800/80 backdrop-blur-sm hover:bg-cyan-600/90 text-white p-3 rounded-full shadow-lg transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-cyan-400 disabled:opacity-30 disabled:cursor-not-allowed disabled:hover:scale-100"
      aria-label="Следующий слайд"
      title="Следующий слайд"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 9l-7 7-7-7"></path>
      </svg>
    </button>

    <!-- URL Sync Toggle Button -->
    <div class="relative">
      <button
        class="url-sync-toggle-btn nav-button backdrop-blur-sm text-white p-3 rounded-full shadow-lg transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-cyan-400"
        x-bind:class="syncUrlWithSlide ? 'bg-cyan-600/90 hover:bg-cyan-700/90' : 'bg-gray-800/80 hover:bg-gray-700/80'"
        x-bind:title="syncUrlWithSlide ? 'URL синхронизация включена (L)' : 'URL синхронизация выключена (L)'"
        x-bind:aria-label="syncUrlWithSlide ? 'Отключить синхронизацию URL' : 'Включить синхронизацию URL'"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
          ></path>
        </svg>
      </button>
      <span class="keyboard-hint">L</span>
    </div>

    <!-- Fullscreen Button -->
    <div class="relative">
      <button
        id="fullscreen-btn"
        class="nav-button bg-gray-800/80 backdrop-blur-sm hover:bg-cyan-600/90 text-white p-3 rounded-full shadow-lg transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-cyan-400"
        aria-label="Полноэкранный режим (F)"
        title="Полноэкранный режим (F)"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"
          ></path>
        </svg>
      </button>
      <span class="keyboard-hint">F</span>
    </div>
  </div>
</div>

<!-- Mobile Navigation Buttons (Bottom) -->
<div
  class="fixed bottom-8 left-1/2 transform -translate-x-1/2 flex items-center gap-4 z-50 lg:hidden"
>
  <!-- Previous Button -->
  <button
    id="prev-slide-btn-mobile"
    class="nav-button bg-gray-800/80 backdrop-blur-sm hover:bg-cyan-600/90 text-white p-4 rounded-full shadow-lg transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-cyan-400 disabled:opacity-30 disabled:cursor-not-allowed disabled:hover:scale-100"
    aria-label="Предыдущий слайд"
    title="Предыдущий слайд"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M15 19l-7-7 7-7"></path>
    </svg>
  </button>

  <!-- URL Sync Toggle Button -->
  <button
    class="url-sync-toggle-btn nav-button backdrop-blur-sm text-white p-4 rounded-full shadow-lg transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-cyan-400"
    x-bind:class="syncUrlWithSlide ? 'bg-cyan-600/90 hover:bg-cyan-700/90' : 'bg-gray-800/80 hover:bg-gray-700/80'"
    x-bind:title="syncUrlWithSlide ? 'URL синхронизация включена (L)' : 'URL синхронизация выключена (L)'"
    x-bind:aria-label="syncUrlWithSlide ? 'Отключить синхронизацию URL' : 'Включить синхронизацию URL'"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
      ></path>
    </svg>
  </button>

  <!-- Fullscreen Button -->
  <button
    id="fullscreen-btn-mobile"
    class="nav-button bg-gray-800/80 backdrop-blur-sm hover:bg-cyan-600/90 text-white p-4 rounded-full shadow-lg transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-cyan-400"
    aria-label="Полноэкранный режим (F)"
    title="Полноэкранный режим (F)"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"
      ></path>
    </svg>
  </button>

  <!-- Next Button -->
  <button
    id="next-slide-btn-mobile"
    class="nav-button bg-gray-800/80 backdrop-blur-sm hover:bg-cyan-600/90 text-white p-4 rounded-full shadow-lg transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-cyan-400 disabled:opacity-30 disabled:cursor-not-allowed disabled:hover:scale-100"
    aria-label="Следующий слайд"
    title="Следующий слайд"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M9 5l7 7-7 7"></path>
    </svg>
  </button>
</div>

<!-- Slide Counter (Mobile) -->
<div
  class="fixed bottom-4 right-4 lg:hidden z-50 bg-gray-800/80 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-mono"
>
  <span x-text="`${currentSlide + 1} / ${totalSlides}`"></span>
</div>
