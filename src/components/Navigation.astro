---
import NavButton from './ui/NavButton.astro';

export interface Props {
  slides: Array<{ id: string; title: string }>;
}

const { slides } = Astro.props;
---

<!-- Right Side Navigation Container -->
<div
  class="fixed right-8 top-1/2 transform -translate-y-1/2 hidden lg:flex flex-col items-center gap-6 z-50 max-h-[90vh]"
>
  <!-- Kommo Logo -->
  <div class="flex-shrink-0">
    <img
      src={`${import.meta.env.BASE_URL}/kommo.png`}
      alt="Kommo"
      class="w-12 h-12 rounded-full object-cover shadow-lg ring-2 ring-gray-700/50"
      loading="eager"
      fetchpriority="high"
    />
  </div>

  <!-- Navigation Dots with Scroll -->
  <nav
    id="nav-dots-container"
    class="flex flex-col space-y-2 overflow-y-auto py-2 px-1"
    aria-label="Навигация по слайдам"
    style="scrollbar-width: none; max-height: calc(5 * 2.5rem); scroll-behavior: smooth;"
  >
    {
      slides.map((slide, index) => (
        <div class="relative flex-shrink-0" data-dot-wrapper={index}>
          <a
            href={`#${slide.id}`}
            data-slide-index={index}
            class="nav-dot flex items-center justify-center w-8 h-8 rounded-full transition-colors duration-300 focus:outline-none text-xs font-semibold text-white relative z-10"
            title={slide.title}
            aria-label={`Перейти к слайду: ${slide.title}`}
            x-bind:class={`currentSlide === ${index} ? 'bg-cyan-500' : 'bg-gray-600 hover:bg-cyan-400'`}
          >
            {index + 1}
          </a>
          <div
            class="absolute inset-0 rounded-full bg-cyan-500/20 transition-all duration-300 pointer-events-none"
            x-bind:class={`currentSlide === ${index} ? 'opacity-100 scale-[1.4]' : 'opacity-0 scale-100'`}
          />
        </div>
      ))
    }
  </nav>

  <!-- Script to handle auto-scroll -->
  <script>
    document.addEventListener('alpine:initialized', () => {
      const container = document.getElementById('nav-dots-container');
      if (!container) return;

      // Watch for Alpine state changes
      (window as any).Alpine.effect(() => {
        const data = (window as any).Alpine.$data(document.body);
        if (!data) return;

        const currentSlide = data.currentSlide || 0;

        // Use requestAnimationFrame to ensure DOM is ready
        requestAnimationFrame(() => {
          const dotWrapper = container.querySelector(
            `[data-dot-wrapper="${currentSlide}"]`
          ) as HTMLElement;

          if (dotWrapper) {
            const containerHeight = container.clientHeight;
            const dotTop = dotWrapper.offsetTop;
            const dotHeight = dotWrapper.offsetHeight;

            // Calculate scroll position to center the active dot
            const centerPosition = dotTop - containerHeight / 2 + dotHeight / 2;

            container.scrollTo({
              top: centerPosition,
              behavior: 'smooth',
            });
          }
        });
      });
    });
  </script>

  <!-- Navigation Buttons -->
  <div class="flex flex-col items-center gap-3">
    <!-- Previous Button -->
    <NavButton
      id="prev-slide-btn"
      icon="arrow-up"
      label="Предыдущий слайд"
      title="Предыдущий слайд"
      size="md"
      canDisable={true}
    />

    <!-- Next Button -->
    <NavButton
      id="next-slide-btn"
      icon="arrow-down"
      label="Следующий слайд"
      title="Следующий слайд"
      size="md"
      canDisable={true}
    />

    <!-- URL Sync Toggle Button -->
    <div class="relative">
      <NavButton
        id="url-sync-toggle-btn"
        icon="link"
        label="Синхронизация URL"
        title="Синхронизация URL (L)"
        size="md"
        alpineClass="syncUrlWithSlide ? 'bg-cyan-600/90 hover:bg-cyan-700/90' : 'bg-gray-800/80 hover:bg-gray-700/80'"
        class="url-sync-toggle-btn"
      />
      <span class="keyboard-hint">L</span>
    </div>

    <!-- Fullscreen Button -->
    <div class="relative">
      <NavButton
        id="fullscreen-btn"
        icon="fullscreen"
        label="Полноэкранный режим (F)"
        title="Полноэкранный режим (F)"
        size="md"
      />
      <span class="keyboard-hint">F</span>
    </div>

    <!-- High Contrast Toggle Button -->
    <div class="relative">
      <NavButton
        id="high-contrast-toggle-btn"
        icon="contrast"
        label="Высокая контрастность (C)"
        title="Высокая контрастность (C)"
        size="md"
        alpineClass="highContrast ? 'bg-cyan-600/90 hover:bg-cyan-700/90' : 'bg-gray-800/80 hover:bg-gray-700/80'"
        class="high-contrast-toggle-btn"
      />
      <span class="keyboard-hint">C</span>
    </div>
  </div>
</div>

<!-- Mobile Navigation Buttons (Bottom) - REMOVED FOR MOBILE -->
<!-- Mobile devices will use simple scrolling without navigation controls -->

<!-- Slide Counter (Mobile) -->
<div
  class="fixed bottom-4 right-4 lg:hidden z-50 bg-gray-800/80 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-mono"
>
  <span x-text="`${currentSlide + 1} / ${totalSlides}`"></span>
</div>

<!-- High Contrast Toggle (Mobile) -->
<div class="fixed bottom-4 left-4 lg:hidden z-50">
  <button
    class="high-contrast-toggle-btn bg-gray-800/80 hover:bg-gray-700/80 text-white rounded-full p-3 shadow-md transition-colors"
    x-bind:class="highContrast ? 'bg-cyan-600/90 hover:bg-cyan-700/90' : 'bg-gray-800/80 hover:bg-gray-700/80'"
    aria-label="Высокая контрастность"
    title="Высокая контрастность"
  >
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <circle cx="12" cy="12" r="10" stroke-width="2" />
      <line x1="12" y1="6" x2="12" y2="18" stroke-width="2" />
    </svg>
  </button>
</div>
