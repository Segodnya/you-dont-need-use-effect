  {/* Card content */}
  <div class={`relative ${style.bg} rounded-xl`}>
    <div class="flex items-start gap-3">
      <span class="text-2xl shrink-0">{style.icon}</span>
      <div class="flex-1">
        {
          title && (
            <h4 class={`font-semibold mb-2 ${style.titleColor}`}>{title}</h4>
          )
        }
        <div class={style.textColor}>
          <slot />
        </div>
      </div>
    </div>
  </div>
