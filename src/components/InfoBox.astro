---
/**
 * InfoBox - Enhanced callout with title support
 *
 * Similar to Callout but includes title support and different layout.
 * Used for more structured informational content.
 */

import GlassCard from './ui/GlassCard.astro';
import type { StatusVariant } from '../lib/constants';
import {
  getStatusTheme,
  BORDER_COLORS,
  BACKGROUND_COLORS,
  STATUS_TO_COLOR,
} from '../lib/constants';

export interface Props {
  type?: StatusVariant;
  title?: string;
  className?: string;
}

const { type = 'info', title, className = '' } = Astro.props;

const theme = getStatusTheme(type);
const color = STATUS_TO_COLOR[type];
---

<GlassCard color={color} class={className} padding="p-4 lg:p-6">
  <div
    class={`border-2 ${BORDER_COLORS[color]} ${BACKGROUND_COLORS[color]} rounded-xl`}
  >
    <div class="flex items-start gap-3">
      <span class="text-2xl shrink-0">{theme.icon}</span>
      <div class="flex-1">
        {
          title && (
            <h4 class={`font-semibold mb-2 ${theme.titleLight}`}>{title}</h4>
          )
        }
        <div class={theme.text}>
          <slot />
        </div>
      </div>
    </div>
  </div>
</GlassCard>
